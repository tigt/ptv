{{> start }}

<title>PokÃ©dex | PokÃ©mon: Tabletop Version</title>

<style>
  table {
    display: inline-table;
  }

  dl {
    display: inline-block;
    vertical-align: bottom;
    margin: 1em;
  }

  dt {
    font-weight: 700;
  }

  dd {
    margin-left: 2ch;
  }

  .mon_pic {
    border-top-left-radius: 30%;
    width: 500px;
    vertical-align: bottom;
  }

  .mon_stats {
    vertical-align: bottom;
  }

  .mon_stats th,
  .mon_stats td {
    text-align: right;
  }

  .mon_moves {
    display: inline-block;
    vertical-align: top;
  }

  .moves_heading {
    margin: 0 0 0.5em;
  }

  .moves_table {
    vertical-align: top;
    border-spacing: 0.5em 0;
  }

  .moves_table th:first-child {
    text-align: right;
  }

  .moves_list {
    margin: 0;
    list-style: outside;
    columns: 2 8em;
  }

  .moves_list > li {
    -webkit-column-break-inside: avoid;
              page-break-inside: avoid;
                   break-inside: avoid;
  }
</style>

{{#each pokemon}}
  <article class="mon" id="{{slugify name}}">
    <h2>{{name}} <a href="#{{slugify name}}">ðŸ”—</a></h2>

    <img alt="" src="./img/{{slugify name}}.png"
      class="mon_pic">

    <dl class="mon_abilities">
      <dt>Type
      <dd>{{type1}}{{#if type2}}&thinsp;/&thinsp;{{type2}}{{/if}}

      <dt>Starting Abilities
      {{#each startingAbilities}}
        <dd><a href="/ptv/abilities/#{{slugify this}}">{{this}}</a>
      {{/each}}

      <dt>Level 5 Abilities
      {{#each level5Abilities}}
        <dd><a href="/ptv/abilities/#{{slugify this}}">{{this}}</a>
      {{/each}}
    </dl>

    <table class="mon_stats">
      <tr>
      <th>HP
      <td>{{stats.HP}}

      <tr>
      <th>ATK
      <td>{{stats.ATK}}

      <tr>
      <th>DEF
      <td>{{stats.DEF}}

      <tr>
      <th>SATK
      <td>{{stats.SATK}}

      <tr>
      <th>SDEF
      <td>{{stats.SDEF}}

      <tr>
      <th>SPD
      <td>{{stats.SPD}}
    </table>

    <dl class="mon_info">
      <dt>Height:
      <dd>{{height}}

      <dt>Weight:
      <dd>{{weight}}&thinsp;lbs.

      <dt>Egg Groups:
      <dd>{{eggGroups}}
    </dl>

    {{> moveset moves=moves evolvesFrom=evolvesFrom}}
  </article>
{{/each}}
