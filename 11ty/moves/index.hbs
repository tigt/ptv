---
data: moves
permalink: moves/
layout: base
title: Moves
---

<style>
  :target {
    background: rgba(255, 255, 0, 0.1);
    outline: 1px dashed #b02a32;
  }

  a[rel=bookmark] {
    color: inherit;
  }

  article {
    display: inline-block;
    max-width: 20em;
    margin: 0.5em;
    padding: 0 0.5em;
    vertical-align: top;
  }

  dt {
    float: left;
    font-weight: bolder;
  }

  dt:after {
    content: ": ";
    white-space: pre;
  }
</style>

<h1>Moves</h1>

{{#moves}}
  <article id="{{slugify name}}">
    <h2><a rel="bookmark" href="#{{slugify name}}">{{name}}</a></h2>
    <dl>
      <dt>Type<dd>{{type}}
      <dt>Category<dd>{{kind}}
      <dt>PP Cost<dd>{{pp}}
      {{#if power}}
      <dt>Power<dd>{{power}}
      {{/if}}
      {{#if accuracy}}
      <dt>Accuracy<dd>{{accuracy}}
      {{/if}}
      <dt>Range<dd>{{range}}
    </dl>
    
    {{{description}}}
    
    {{#if zEffect}}
      <p><b>Z-Effect:</b> {{zEffect}}</p>
    {{/if}}
  </article>
{{/moves}}
