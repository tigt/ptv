---
pagination:
  data: pokemon
  size: 1
  alias: mons
  resolve: values
permalink: "dex/{{slugify mons.[0].name}}{{#if mons.[1]}}-family{{/if}}/"
layout: base
---

<style>
  table {
    display: inline-table;
  }

  dl {
    display: inline-block;
    vertical-align: bottom;
    margin: 1em;
  }

  dt {
    font-weight: 700;
  }

  dd {
    margin-left: 2ch;
  }

  .mon_pic {
    border-top-left-radius: 30%;
    width: 500px;
    vertical-align: bottom;
  }

  .mon_stats,
  .mon_skills {
    vertical-align: bottom;
  }

  .mon_stats th,
  .mon_stats td,
  .mon_skills th,
  .mon_skills td {
    text-align: right;
  }

  .mon_moves {
    display: inline-block;
    vertical-align: top;
  }

  .moves_heading {
    margin: 0 0 0.5em;
  }

  .moves_table {
    vertical-align: top;
    border-spacing: 0.5em 0;
  }

  .moves_table th:first-child {
    text-align: right;
  }

  .moves_list {
    margin: 0;
    list-style: outside;
    columns: 2 8em;
  }

  .moves_list > li {
    -webkit-column-break-inside: avoid;
              page-break-inside: avoid;
                   break-inside: avoid;
  }
</style>

<main>
  <h1>{{mons.[0].name}} Family</h1>

  {{#each mons}}
    {{> dex-entry mon=this}}
  {{/each}}
</main>
