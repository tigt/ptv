---
layout: base
---

<style>
  table {
    display: inline-table;
    border-spacing: 0;
    font-variant-numeric: tabular-nums;
  }
  th,
  td {
    padding: 0 0.5ch 0 0;
  }

  dl {
    margin: 1em 1em 1px; /* 1px is to align with the 1px padding of table cells */
  }
  dt {
    font-weight: 700;
  }
  dd {
    margin-left: 2ch;
  }

  h2 {
    margin-bottom: 0;
  }

  .mon_pic {
    border-top-left-radius: 30%;
    max-width: 100%;
    height: auto;
  }

  .mon_stats,
  .mon_skills {
    text-align: right;
  }

  .mon_pic,
  .mon_abilities,
  .mon_stats,
  .mon_skills,
  .mon_info {
    vertical-align: bottom;
    display: inline-block;
  }

  .mon_info > dt,
  .mon_info > dd {
    display: inline;
  }

  .mon_info > dd::after {
    content: "";
    display: block;
  }

  .mon_moves {
    display: inline-block;
    vertical-align: top;
  }

  .moves_heading {
    margin: 0 0 0.5em;
    flex-basis: 100%;
  }

  .moves_table {
    border-spacing: 0.5em 0;
  }

  .moves_table > tbody {
    vertical-align: top;
  }

  .moves_table th:first-child {
    text-align: right;
  }

  .mon_moves {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .tutor-moves {
    flex: 1;
  }

  .tutor-moves_heading {
    margin: 0;
  }

  .tutor-moves_list {
    margin: 0;
    padding: 0;
    list-style: inside;
    columns: 8em;
  }
  li { /* specifically fixes a problem with CSS multicolumn, but good for printing too */
    break-inside: avoid;
  }
</style>

