{{#with mon}}
<article class="mon" id="{{slugify name}}">
  <h2><a href="#{{slugify name}}">{{name}}</a></h2>

  <img alt="" src="./img/{{slugify name}}.png"
  class="mon_pic">

  <dl class="mon_abilities">
    <dt>Type
    <dd>{{type1}}{{#if type2}}&thinsp;/&thinsp;{{type2}}{{/if}}


    {{#*inline "formatAbilities" }}
      {{#each abilities~}}
        <a href="/ptv/abilities/#{{slugify this}}">{{this}}</a>{{#unless @last}}&thinsp;/&thinsp;{{/unless}}
      {{~/each}}
    {{/inline}}

    <dt>Starting Abilit{{#if abilities.start.[1]}}ies{{else}}y{{/if}}
    {{#each abilities.start}}
      <dd>{{>formatAbilities abilities=this}}
    {{/each}}

    <dt>Level 5 Abilities
    {{#each abilities.level5}}
      <dd>{{>formatAbilities abilities=this}}
    {{/each}}
  </dl>

  <table class="mon_stats">
    {{#each stats}}
    <tr>
    <th>{{@key}}
    <td>{{this}}
    {{/each}}
  </table>

  <table class="mon_skills">
    {{#each skills}}
    <tr>
    <th>{{@key}}
    <td>{{this}}
    {{/each}}
  </table>

  <dl class="mon_info">
    <dt>Height:
    <dd>{{height}}

    <dt>Weight:
    <dd>{{weight}}&thinsp;lbs.

    <dt>Egg Group{{#if eggGroups.[1]}}s{{/if}}:
    <dd>{{eggGroups}}

    {{#if catchDC}}
    <dt>Suggested Catch DC:
    <dd>{{catchDC}} â—“
    {{/if}}

    {{#if evolves.from}}
      <dt>Evolves from:
      <dd>{{evolves.from}}, by {{evolves.by}}
    {{/if}}
  </dl>

  <div class="mon_entry">
  {{{blurb}}}
  </div>

  {{> moveset moves=moves evolvesFrom=evolves.from}}
</article>
{{/with}}